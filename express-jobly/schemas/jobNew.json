{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/jobNew.schema.json",
    "type": "object",
    "required": ["title", "salary", "equity", "companyHandle"],
    "properties": {
        "id": {
            "type": "integer"
        },
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "salary": {
            "type": "integer",
            "minimum": 0,
            "default": 0
        },
        "equity": {
            "type": "number",
            "minimum": 0,
            "maximum": 1.0,
            "default": 0
        },
        "companyHandle": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        }
    }
}
